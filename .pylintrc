[MASTER]
# Allow CI to pass without project dependencies installed
ignored-modules=flask,sqlalchemy,boto3,requests,apscheduler,dotenv,werkzeug

[MESSAGES CONTROL]
disable=
    # Import issues when running without virtualenv (CI installs only pylint)
    E0401,  # import-error
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    C0301,  # line-too-long
    C0303,  # trailing-whitespace
    C0304,  # trailing-newlines
    C0411,  # wrong-import-order
    C0412,  # ungrouped-imports
    C0413,  # wrong-import-position
    C0415,  # import-outside-toplevel
    W0611,  # unused-import
    W0612,  # unused-variable
    W0613,  # unused-argument
    W0614,  # unused-wildcard-import
    W0621,  # redefined-outer-name
    W0703,  # broad-exception-caught
    W1203,  # logging-fstring-interpolation
    W0107,  # unnecessary-pass
    W0602,  # global-variable-not-assigned
    W0603,  # global-statement
    R0801,  # duplicate-code
    R0401,  # cyclic-import
    R0903,  # too-few-public-methods
    R0912,  # too-many-branches
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    R0915,  # too-many-statements
    R1705,  # no-else-return
    W1514,  # unspecified-encoding
    E1102,  # not-callable  (SQLAlchemy func.count false positive)
    E1101,  # no-member     (SQLAlchemy/boto3 dynamic members)
    W0231,  # super-init-not-called
    W4701,  # f-string-without-interpolation
    R0201,  # no-self-use
    W0201,  # attribute-defined-outside-init
    W0212,  # protected-access
    W0404,  # reimported
    W0611,  # unused-import
    W1309,  # f-string-without-interpolation

[FORMAT]
max-line-length=200

[DESIGN]
max-args=20
max-locals=30
max-branches=20
max-statements=100
max-nested-blocks=10

[SIMILARITIES]
min-similarity-lines=20

[BASIC]
good-names=i,j,k,e,f,g,db,q,t,s,m,r,c,v,n,p,id,ok

[REPORTS]
# Exit with 0 as long as no outright errors slip through after the above disables
fail-under=0
